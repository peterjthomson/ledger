{
  "name": "ledger",
  "version": "1.4.0",
  "description": "A modern git interface for macOS - view branches, worktrees, and pull requests",
  "main": "./out/main/main.js",
  "license": "MIT",
  "author": {
    "name": "Peter Thomson",
    "url": "https://github.com/peterjthomson"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "cross-env ELECTRON_DISABLE_SANDBOX=1 electron-vite dev -w",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "vite:build:app": "electron-vite build",
    "electron:build:win": "electron-builder --win",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:mac:arm64": "electron-builder --mac --arm64",
    "electron:build:mac:x64": "electron-builder --mac --x64",
    "electron:build:mac:universal": "electron-builder --mac --universal",
    "electron:build:linux": "electron-builder --linux",
    "electron:build:dir": "electron-builder --dir",
    "build:unpack": "run-s vite:build:app electron:build:dir",
    "build:win": "run-s vite:build:app electron:build:win",
    "build:mac": "run-s vite:build:app electron:build:mac && xattr -cr dist/mac-*/Ledger.app",
    "build:mac:arm64": "run-s vite:build:app electron:build:mac:arm64 && ./scripts/check-app-size.sh && xattr -cr dist/mac-arm64/Ledger.app",
    "build:mac:x64": "run-s vite:build:app electron:build:mac:x64 && xattr -cr dist/mac-x64/Ledger.app",
    "build:mac:universal": "run-s vite:build:app electron:build:mac:universal && xattr -cr dist/mac-universal/Ledger.app",
    "build:linux": "run-s vite:build:app electron:build:linux",
    "release": "run-s vite:build:app && electron-builder --mac --publish always",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "pretest": "npm run vite:build:app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peterjthomson/ledger"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.50.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@google/generative-ai": "^0.21.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/d3": "^7.4.3",
    "@types/dagre": "^0.7.53",
    "@xyflow/react": "^12.10.0",
    "better-sqlite3": "^11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "dagre": "^0.8.5",
    "fix-path": "^5.0.0",
    "lucide-react": "^0.541.0",
    "openai": "^6.0.0",
    "react-json-view-lite": "^2.5.0",
    "shiki": "^3.20.0",
    "simple-git": "^3.30.0",
    "tailwind-merge": "^3.3.1",
    "tldraw": "^4.2.3",
    "ts-morph": "^27.0.2",
    "tw-animate-css": "^1.3.7",
    "uuid": "^11.1.0",
    "zod": "^4.1.3",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.57.0",
    "@rushstack/eslint-patch": "^1.12.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "cross-env": "^10.0.0",
    "electron": "^37.10.3",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "framer-motion": "^12.23.12",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.57.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3"
  }
}
